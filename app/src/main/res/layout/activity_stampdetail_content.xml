<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9">

            <cn.com.chinau.view.VerticalScrollView
                android:id="@+id/home_SV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/base_viewpager" />

                    <View style="@style/myline" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/distance"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/stamp_detail_goods_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/left_distance"
                                android:layout_marginRight="5dp"
                                android:text="庚申年"
                                android:textColor="#000"
                                android:textSize="18sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/appraisal" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/distance"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/distance"
                                android:text="@string/selling_price"
                                android:textColor="@color/font"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/stamp_detail_current_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="￥1000000.00"
                                android:textColor="@color/red_font"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/distance"
                                android:text="@string/freightcolon"
                                android:textColor="@color/font"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/stamp_detail_freight"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="￥10.00"
                                android:textColor="@color/font"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/distance"
                                android:text="@string/sales_volumecolon"
                                android:textColor="@color/font"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/stamp_detail_sale_count"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="100"
                                android:textColor="@color/font"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/distance"
                            android:layout_marginTop="@dimen/distance"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/distance"
                                android:text="服务费"
                                android:textColor="@color/font"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/stamp_detail_service_fee_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(1%):"
                                android:textColor="@color/font"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/stamp_detail_service_fee"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="￥10.00"
                                android:textColor="@color/font"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/stamp_detail_goods_source"
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/distance"
                                android:background="@drawable/rectangle_bg"
                                android:gravity="center"
                                android:text="邮市"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/myline" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/distance"
                        android:background="@color/background" />

                    <View style="@style/myline" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:layout_marginLeft="@dimen/distance"
                        android:drawableLeft="@mipmap/sellerinfo"
                        android:drawablePadding="9dp"
                        android:gravity="center_vertical"
                        android:text="商家信息"
                        android:textColor="@color/font"
                        android:textSize="15sp" />

                    <View
                        style="@style/myline"
                        android:layout_marginLeft="@dimen/distance" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/left_distance"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/distance"
                            android:text="商家名称:"
                            android:textColor="@color/font_color"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/stamp_detail_seller_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/distance"
                            android:layout_weight="1"
                            android:text="黄先生"
                            android:textColor="@color/font"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/distance"
                        android:layout_marginTop="@dimen/left_distance"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/distance"
                            android:text="商家账号:"
                            android:textColor="@color/font_color"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/stamp_details_seller_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/distance"
                            android:layout_weight="1"
                            android:textColor="@color/font"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <View style="@style/myline" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/distance"

                        android:background="@color/background" />

                    <View style="@style/myline" />


                    <com.viewpagerindicator.TabPageIndicator
                        android:id="@+id/stampdetail_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:visibility="gone" />

                    <cn.com.chinau.view.CustomViewPager
                        android:id="@+id/stampdetail_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        android:scrollbars="none" />

                    <View style="@style/myline" />

                </LinearLayout>
            </cn.com.chinau.view.VerticalScrollView>
        </LinearLayout>
        <!-- 底下的代码，导航栏是不随SrcollView滑动的-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/stamp_detail_goods_status"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#cccccc"
                    android:gravity="center"
                    android:text="已下架"
                    android:textColor="#000"
                    android:textSize="@dimen/text3_size"
                    android:visibility="gone" />

                <View style="@style/myline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/stamp_details_collect"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:padding="8dp"
                        android:gravity="center"
                        android:scaleType="center"
                        android:src="@mipmap/collection" />

                    <View style="@style/mylist" />

                    <LinearLayout
                        android:id="@+id/stamp_details_shopping_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/stamp_deatail_shopping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/shop_gray" />

                        <TextView
                            android:id="@+id/stamp_details_shoppingCart"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginBottom="10dp"
                            android:background="@mipmap/message_bg"
                            android:gravity="center"
                            android:text="+10"
                            android:textColor="@color/white"
                            android:textSize="8sp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/stamp_details_addShoppingCart"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:background="#ff8503"
                        android:gravity="center"
                        android:text="加入购物车"
                        android:textColor="#fff"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/stamp_details_buyNow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:background="#e20000"
                        android:gravity="center"
                        android:text="立即购买"
                        android:textColor="#fff"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <!--置顶按钮-->
    <include layout="@layout/top_btn" />

</RelativeLayout>