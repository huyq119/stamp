<?xml version="1.0" encoding="utf-8"?><!--购物车子条目-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/distance"
        android:src="@mipmap/circle_select" />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/distance"
        android:background="@drawable/roct_bg">

        <ImageView
            android:id="@+id/child_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/distance"
        android:layout_marginTop="@dimen/distance"
        android:orientation="vertical">

        <TextView
            android:id="@+id/child_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance"
            android:text="庚申年"
            android:textSize="15sp"
            android:textColor="#000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/distance"
            android:gravity="bottom"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/child_price"
                android:textSize="14sp"
                android:textColor="#e20000"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="￥100000" />

            <TextView
                android:id="@+id/child_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/distance"
                android:textSize="12sp"
                android:text="*1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>