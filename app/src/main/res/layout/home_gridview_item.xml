<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <com.example.stamp.view.SquareView
        android:layout_width="173dp"
        android:layout_height="173dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/roct_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_item_icon"
            android:layout_width="131dp"
            android:layout_height="131dp"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@mipmap/head_icon"/>
    </com.example.stamp.view.SquareView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="庚申年"
            android:textColor="#6a6a6a"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/home_item_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance"
            android:layout_marginTop="10dp"
            android:text="￥10000.00"
            android:layout_marginBottom="5dp"
            android:textColor="#e20000"
            android:textSize="14sp"/>


    </LinearLayout>

</LinearLayout>