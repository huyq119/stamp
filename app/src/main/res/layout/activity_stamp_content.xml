<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View style="@style/myline" />

        <LinearLayout
            android:id="@+id/stamp_titleStamp_ll"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/stamp_newchinese_ll"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/stamp_newChinese_iv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:background="#d3d3d3"
                        android:src="@mipmap/zhifubao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text="新中国邮票"
                        android:textColor="#666"
                        android:textSize="13sp" />

                </LinearLayout>

                <View
                    android:id="@+id/newChinese_view"
                    style="@style/auction_color_line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stamp_republicChina_ll"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/stamp_republicChina_iv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:background="#d3d3d3"
                        android:src="@mipmap/weixin_pay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text="民国邮票"
                        android:textColor="#666"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:id="@+id/republicChina_view"
                    style="@style/auction_color_line" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/stamp_liberatedArea_ll"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/stamp_liberatedArea_iv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:background="#d3d3d3"
                        android:src="@mipmap/zhifubao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text="解放区邮票"
                        android:textColor="#666"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:id="@+id/liberatedArea_view"
                    style="@style/auction_color_line" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/stamp_qingDynasty_ll"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/auction_qingDynasty_lv"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:background="#d3d3d3"
                        android:src="@mipmap/weixin_pay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text="清代邮票"
                        android:textColor="#666"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:id="@+id/qingDynasty_view"
                    style="@style/auction_color_line" />
            </LinearLayout>

        </LinearLayout>

        <com.example.stamp.view.HorizontalListView
            android:id="@+id/stamp_hl"
            android:layout_width="match_parent"
            android:layout_height="31dp" />


        <View
            android:id="@+id/stamp_blank_view"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/background"  />

        <View style="@style/myline" />
        <LinearLayout

            android:id="@+id/market_radioGroup"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/stamp_synthesize"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/top_arrow"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/synthesize"
                android:textColor="#666"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#dedfe3" />

            <Button
                android:id="@+id/stamp_sales"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="3dp"
                android:drawableRight="@mipmap/top_arrow"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/sales"
                android:textColor="#666666"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#dedfe3" />

            <Button
                android:id="@+id/stamp_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="3dp"
                android:drawableRight="@mipmap/top_arrow"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/price"
                android:textColor="#666666"
                android:textSize="12sp" />

            <!--<View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#dedfe3" />

            <Button
                android:id="@+id/stamp_filter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawablePadding="3dp"
                android:drawableRight="@mipmap/filter"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/filter"
                android:textColor="#666666"
                android:textSize="12sp" />-->
        </LinearLayout>

        <View style="@style/myline" />

        <GridView
            android:id="@+id/stamp_gl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="2"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />
    </LinearLayout>

    <!--置顶按钮-->
    <Button
        android:id="@+id/stamp_top_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="63dp"
        android:layout_marginRight="10dp"
        android:background="@mipmap/top"
        android:gravity="center"
        android:visibility="gone" />

</RelativeLayout>
