<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.example.stamp.view.SquareView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="#0f0"
        android:orientation="horizontal">

        <com.example.stamp.view.RotateTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/tag"
            android:paddingRight="8dp"
            android:paddingTop="7dp"
            android:text="倾斜"
            android:textColor="#fff"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/PanStamp_item_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@mipmap/head_icon" />
    </com.example.stamp.view.SquareView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/PanStamp_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="庚申年"
                android:textColor="#666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/PanStamp_item_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="￥10000.00"
                android:textColor="#e20000"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>