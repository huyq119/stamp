<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <com.example.stamp.view.SquareView
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="15dp"
        android:background="@drawable/roct_bg"
        android:orientation="horizontal"
        android:padding="1dp">

        <ImageView
            android:id="@+id/works_works_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher"/>

        <com.example.stamp.view.RotateTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/tag"
            android:paddingRight="7dp"
            android:paddingTop="9dp"
            android:text="邮票目录"
            android:textColor="#fff"
            android:textSize="9sp"/>

    </com.example.stamp.view.SquareView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="19dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/works_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="7dp"
            android:text="庚申年(金猴)"
            android:textColor="#333"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stampnumber"
                android:textColor="#333"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/works_serial_no_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="7dp"
                android:text="T.46"
                android:textColor="#333"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textColor="#333"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/works_category_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="7dp"
                android:text="编年邮票"
                android:textColor="#333"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Release_time"
                android:textColor="#333"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/works_publish_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="7dp"
                android:text="1980-02-15"
                android:textColor="#333"
                android:textSize="14sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/works_suit_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="7dp"
            android:text="1枚/套"
            android:textColor="#333"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/market_price"
                android:textColor="#333"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/works_current_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1000000.00"
                android:textColor="#e20000"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>