<?xml version="1.0" encoding="utf-8"?>
<!--订单详情付款页面-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="90dp"
    android:id="@+id/orderdetails_payment_ll"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_detail_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/obligation"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/order_detail_endTime_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/distance"
                android:text="@string/remaining_time"
                android:textColor="#999"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/order_detail_endTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:textColor="#ff9900"
                android:textSize="13sp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/distance"
        android:layout_marginTop="@dimen/distance"
        android:orientation="horizontal">

        <TextView
            android:textColor="#999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_number"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/order_detail_orderSn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance"
            android:textColor="@color/black"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/distance"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:textColor="#999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Order_time"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/order_detail_mCreate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance"
            android:textColor="@color/black"
            android:textSize="13sp"/>
    </LinearLayout>

    <View
        style="@style/myline"/>
</LinearLayout>