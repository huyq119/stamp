<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:layout_weight="9"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/Years"
                android:textColor="#000"
                android:textSize="15sp" />

            <View style="@style/myline" />

            <cn.com.chinau.view.NoScrollGridView
                android:id="@+id/stamptap_pop_years"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:horizontalSpacing="16dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp" />

            <View style="@style/myline" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="15dp"
                android:text="@string/category"
                android:textColor="#000"
                android:textSize="15sp" />

            <View style="@style/myline" />

            <cn.com.chinau.view.NoScrollGridView
                android:id="@+id/stamptap_pop_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:horizontalSpacing="16dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp" />

            <View style="@style/myline" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="15dp"
                android:text="@string/theme"
                android:textColor="#000"
                android:textSize="15sp" />

            <View style="@style/myline"

                />

            <cn.com.chinau.view.NoScrollGridView
                android:id="@+id/stamptap_pop_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:horizontalSpacing="16dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp" />

            <View style="@style/myline"
                android:layout_marginBottom="25dp"
                />

        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:id="@+id/stamptap_ll"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:fillViewport="true"
        android:orientation="vertical">

        <View style="@style/myline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stamptap_pop_resetting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/resetting"
                android:textColor="#333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/stamptap_pop_ensure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#e20000"
                android:gravity="center"
                android:text="@string/ensure"
                android:textColor="#fff"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>