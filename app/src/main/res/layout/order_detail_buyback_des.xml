<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/ll_order_detail_express_name"
    android:orientation="vertical">


    <View style="@style/myline" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:background="#f8f8f8"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/distance"
        android:text="@string/buy_backInfo"
        android:textColor="#666"
        android:textSize="12sp" />

    <View style="@style/myline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#fff"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/distance"
                android:layout_weight="1"
                android:text="@string/order_Express_name"
                android:textColor="#999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_Express_name_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:textColor="#000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="#fff"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/distance"
                android:layout_weight="1"
                android:text="@string/order_express_num"
                android:textColor="#999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_Express_num_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:textColor="#000"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>