<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/view_image_iv"
        android:layout_width="119dp"
        android:layout_height="119dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="15dp"
        android:background="@drawable/roct_bg"
        android:padding="10dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:text="邮来邮网专访《豫园》特种邮票设计师张安朴"
            android:textColor="#000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_of_issue"
                android:textColor="#999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/view_publish_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1980-02-15"
                android:lineSpacingExtra="10dp"
                android:textColor="#333"
                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/author_"
                android:textColor="#999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/view_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张安朴"
                android:textColor="#333"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>