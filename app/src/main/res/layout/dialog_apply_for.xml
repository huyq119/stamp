<?xml version="1.0" encoding="utf-8"?><!--((退货/退款)申请平台介入Dialog)-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="330dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_item_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:gravity="center"
        android:text="@string/text_apply_for"
        android:textColor="#000"
        android:textSize="16sp" />

    <View style="@style/myline" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="16dp"
        android:text="@string/apply_for_reason"
        android:textColor="#999"
        android:textSize="13sp"

        />

    <LinearLayout
        android:layout_width="298dp"
        android:layout_height="183dp"
        android:background="@drawable/edittext_bg"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <EditText
                android:id="@+id/edit_des"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:background="@null"
                />
        </LinearLayout>


    </LinearLayout>

    <View style="@style/myline"
        android:layout_marginTop="31dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="15sp"

            />
        <View android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#dddfe3"
             />

        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="提交"
            android:layout_weight="1"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="15sp"

            />
    </LinearLayout>

</LinearLayout>