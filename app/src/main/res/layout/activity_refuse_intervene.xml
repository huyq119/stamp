<?xml version="1.0" encoding="utf-8"?><!--退款/退货页面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance"
            android:text="退款类型"
            android:textColor="#333"
            android:textSize="13sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:text="请选择退款类型"
            android:textColor="@color/red_font"
            android:textSize="11sp"

            />
    </LinearLayout>

    <View style="@style/myline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/no_refuse_ll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/no_refuse"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/distance"
                android:button="@null"
                android:gravity="center"
                android:text="未收到货"
                android:textColor="@drawable/orders_goods_line_bg"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/no_refuse_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/refuse_intervene"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/myline"
            android:layout_marginLeft="@dimen/distance" />

        <LinearLayout
            android:id="@+id/yes_refuse_ll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/yes_refuse"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/distance"
                android:button="@null"
                android:gravity="center"
                android:text="已收到货"
                android:textColor="@drawable/orders_goods_line_bg"
                android:textSize="14sp"

                />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/yes_refuse_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/refuse_intervene"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View style="@style/myline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@color/background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance"
            android:text="邮寄信息"
            android:textColor="#333"
            android:textSize="13sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:text="请填写邮寄信息"
            android:textColor="@color/red_font"
            android:textSize="11sp"

            />
    </LinearLayout>

    <View style="@style/myline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/express_company_ll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/distance"
                android:button="@null"
                android:gravity="center"
                android:text="快递公司"
                android:textColor="@drawable/orders_goods_line_bg"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/right_arrow" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/myline"
            android:layout_marginLeft="@dimen/distance" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/distance"
                android:button="@null"
                android:gravity="center_vertical"
                android:text="快递单号"
                android:textColor="#999"
                android:textSize="14sp"

                />

            <EditText
                android:id="@+id/et_courier_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:inputType="number" />

        </LinearLayout>
    </LinearLayout>

    <View style="@style/myline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance"
            android:text="退款说明"
            android:textColor="#333"
            android:textSize="13sp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:text="请填写退款说明"
            android:textColor="@color/red_font"
            android:textSize="11sp"

            />
    </LinearLayout>

    <View style="@style/myline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/ed_refuse_explain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入退款说明"
            android:textColor="#999"
            android:textSize="12sp"

            />


    </LinearLayout>
    <View style="@style/myline" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="102dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="客服电话:"
                android:textColor="#666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Service_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="400-898-1878"
                android:layout_marginLeft="10dp"
                android:textColor="#3785dc"
                android:textSize="14sp" />

        </LinearLayout>

        <View style="@style/myline"
            android:layout_above="@+id/sumbit_apply_for"
            />

            <TextView
                android:id="@+id/sumbit_apply_for"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="提交申请"
                android:layout_alignParentBottom="true"
                android:textColor="#000"
                android:textSize="18sp" />

    </RelativeLayout>
</LinearLayout>