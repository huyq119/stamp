<?xml version="1.0" encoding="utf-8"?><!--购物车子条目-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/distance"
        android:background="@drawable/roct_bg">

        <ImageView
            android:id="@+id/child_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/distance"
        android:layout_marginTop="@dimen/distance"
        android:orientation="vertical">

        <TextView
            android:id="@+id/child_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/distance"
            android:gravity="bottom"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/child_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#e20000"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/child_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/distance"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>