<?xml version="1.0" encoding="utf-8"?>
<!-- 短信验证码次数对话框 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="234dp"
    android:layout_height="wrap_content"
    android:background="@drawable/quite_dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="请输入验证码"
        android:textColor="#999"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/dialog_code"
            android:layout_width="112dp"
            android:layout_height="28dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/button_bg_while"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dialog_fourcode"
            android:layout_width="53dp"
            android:layout_height="28dp"
            android:layout_marginLeft="11dp"
            android:background="@drawable/button_bg_while"
            android:gravity="center"
            android:text="shdu"
            android:textColor="#000"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/dialog_refurbish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:src="@drawable/refurbish" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="#c8c8c8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_quite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#333"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:background="#c8c8c8" />

        <TextView
            android:id="@+id/dialog_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="#333"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>