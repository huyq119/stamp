<?xml version="1.0" encoding="utf-8"?><!--竞拍详情页-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <cn.com.chinau.view.VerticalScrollView
            android:id="@+id/home_SV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/base_viewpager" />

                <View style="@style/myline" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/auction_detail_goods_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/left_distance"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/appraisal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/auction_detail_time_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/left_distance"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/auction_detail_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/clock"
                        android:drawablePadding="5dp"
                        android:textColor="@color/font"
                        android:textSize="@dimen/fount_size" />

                    <TextView
                        android:id="@+id/auction_detail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font"
                        android:textSize="@dimen/fount_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/auction_detail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/refuse"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/auction_detail_current_privce_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance"
                        android:text="@string/Current_pricecolon"
                        android:textColor="@color/font"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/auction_detail_current_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/red_font"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance"
                        android:text="@string/freightcolon"
                        android:textColor="@color/font"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/auction_detail_freight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font"
                        android:textSize="12sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:text="服务费"
                        android:textColor="@color/font"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/auction_detail_service_fee_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/auction_detail_service_fee"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/font"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/auction_detail_goods_source"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/distance"
                        android:background="@drawable/rectangle_bg"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <View style="@style/myline" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/distance"
                    android:background="@color/background" />

                <View style="@style/myline" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/distance"
                    android:drawableLeft="@mipmap/sellerinfo"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:text="商家信息"
                    android:textColor="@color/font"
                    android:textSize="@dimen/text3_size" />

                <View
                    style="@style/myline"
                    android:layout_marginLeft="@dimen/distance" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/left_distance"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance"
                        android:text="商家名称:"
                        android:textColor="@color/font_color"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/auction_detail_seller_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance"
                        android:layout_weight="1"
                        android:textColor="@color/font"
                        android:textSize="13sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/distance"
                    android:layout_marginTop="@dimen/left_distance"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance"
                        android:text="商家账号:"
                        android:textColor="@color/font_color"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/auction_detail_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/distance"
                        android:textColor="@color/font"
                        android:textSize="13sp" />

                </LinearLayout>

                <View style="@style/myline" />

                <View
                    style="@style/myline"
                    android:layout_marginTop="@dimen/distance" />

                <com.viewpagerindicator.TabPageIndicator
                    android:id="@+id/auctiondetail_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:visibility="gone" />

                <cn.com.chinau.view.CustomViewPager
                    android:id="@+id/auctiondetail_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

                <View style="@style/myline" />


                <LinearLayout
                    android:id="@+id/bid_record_ll"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/arrows_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/arrows_up"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/bid_record_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:gravity="center"
                        android:text="@string/bid_record_up"
                        android:textColor="@color/font"
                        android:textSize="14sp"

                        />

                </LinearLayout>

                <View style="@style/myline" />
                <!--出价记录-->
                <FrameLayout
                    android:id="@+id/auction_bidrecord_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <include layout="@layout/auction_bidrecord_pop" />
                </FrameLayout>

            </LinearLayout>
        </cn.com.chinau.view.VerticalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/auction_deatail_over_tv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#cccccc"
                android:gravity="center"
                android:text="已结束"
                android:textColor="#000"
                android:textSize="@dimen/text3_size"
                android:visibility="gone"
                />

            <View style="@style/myline" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/auction_collect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:scaleType="center"
                    android:src="@mipmap/collection" />

                <View style="@style/mylist" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/auction_subtract"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/auction_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/auction_add"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/auction_bid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#e20000"
                    android:gravity="center"
                    android:text="出价"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!--置顶按钮-->
    <include layout="@layout/top_btn" />


</RelativeLayout>