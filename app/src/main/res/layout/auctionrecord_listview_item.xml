<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/record_out_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:background="#f00"
        android:scaleType="center"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/auctionRecord_item_Name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="庚申年"
                android:textColor="#000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/auctionRecord_item_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="已出局"
                android:textColor="#999"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <LinearLayout
                android:id="@+id/auctionRecord_item_currentPrice_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/auctionRecord_item_current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/auctionRecord_item_currentPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="￥1000.00"
                    android:textColor="@color/red_font"
                    android:textSize="13sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/auctionRecord_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_time"
                    android:textColor="#999"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/auctionRecord_item_spareTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="11:22:24"
                    android:textColor="#ff9900"
                    android:textSize="13sp"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/auctionRecord_item_successStatus"
            android:layout_width="40dp"
            android:layout_height="21dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/distance"
            android:layout_marginTop="@dimen/distance"
            android:background="@mipmap/rectangle_red"
            android:gravity="center"
            android:text="付款"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>