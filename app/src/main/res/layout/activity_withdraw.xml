<?xml version="1.0" encoding="utf-8"?>
<!-- 提现界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="@string/Available_balance"
                android:textColor="#666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/withdraw_balance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@mipmap/wallet"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/withdraw_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/blue_bg"
                android:gravity="center"
                android:text="@string/bank_card"
                android:textColor="#fff"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/withdraw_card_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@mipmap/green_bg"
                android:gravity="center"
                android:text="@string/Application_for_withdrawal"
                android:textColor="#fff"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/myline" />

    <TextView
        android:id="@+id/withdraw_noOrder"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="@string/Balance_of_payments"
        android:textColor="#666"
        android:textSize="12sp" />

    <View style="@style/myline" />

    <TextView
        android:id="@+id/withdraw_noData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="@string/No_detailed_information"
        android:textColor="#000"
        android:textSize="15sp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/withdraw_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:divider="#f8f8f8"
        android:dividerHeight="1dp"
        android:overScrollMode="never"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>