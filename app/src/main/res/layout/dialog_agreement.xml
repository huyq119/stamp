<?xml version="1.0" encoding="utf-8"?>
<!--竞拍出价协议Dialog-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_item_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/regulations_agreement"
        android:textColor="#000"
        android:textSize="16sp" />

    <View style="@style/myline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15sp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@mipmap/bid_regulation"
            android:drawablePadding="9dp"
            android:gravity="center_vertical"
            android:text="@string/bid_regulation"
            android:textColor="#666"
            android:textSize="15sp" />

        <View style="@style/myline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="13dp"
                    android:text="@string/price_range"
                    android:textColor="#333"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="1~50"
                    android:textColor="#666"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="50~100"
                    android:textColor="#666"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="100~500"
                    android:textColor="#333"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="500~"
                    android:textColor="#666"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="13dp"
                    android:text="@string/bid_range"
                    android:textColor="#333"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="+1"
                    android:textColor="#666"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="+2"
                    android:textColor="#666"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="+5"
                    android:textColor="#666"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="+10"
                    android:textColor="#666"
                    android:textSize="15sp" />

            </LinearLayout>


        </LinearLayout>

        <View style="@style/myline" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@mipmap/auction_agreement"
            android:drawablePadding="9dp"
            android:gravity="center_vertical"
            android:text="@string/auction_agreement"
            android:textColor="#666"
            android:textSize="15sp" />

        <View style="@style/myline" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="7sp"
            android:text="@string/Agreement_Des"
            android:lineSpacingExtra="5dp"
            android:textColor="#666"
            android:textSize="12sp" />


    </LinearLayout>

    <View style="@style/myline" />

    <Button
        android:id="@+id/iKonw_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:text="@string/i_konw_text"
        android:textColor="#000"
        android:layout_gravity="center"
        android:textSize="15sp"
        />
</LinearLayout>