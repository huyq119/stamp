<?xml version="1.0" encoding="utf-8"?><!--购物车父条目-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/order_liner"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:minHeight="44dp"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_selected"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="center"

        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:src="@drawable/select_bg"/>


    <TextView
        android:id="@+id/group_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/shop_icon"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:text="邮来邮网自营商店"
        android:textColor="#333"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/group_type"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/distance"
        android:gravity="center_vertical"
        android:text="自营"
        android:textColor="#e20000"
        android:textSize="13sp"/>
</LinearLayout>